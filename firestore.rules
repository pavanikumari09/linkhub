rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function: user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function: user owns the document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Users can only access their own data
    match /users/{userId} {
      // User document (profile, notepad, etc.)
      allow read, write: if isOwner(userId);
      
      // User's links subcollection
      match /links/{linkId} {
        allow read, write: if isOwner(userId);
        
        // Validate link data on create/update
        allow create: if isOwner(userId) 
          && request.resource.data.keys().hasAll(['url', 'title', 'description', 'domain', 'favorite', 'createdAt', 'updatedAt'])
          && request.resource.data.url is string
          && request.resource.data.title is string
          && request.resource.data.description is string
          && request.resource.data.domain is string
          && request.resource.data.favorite is bool
          && request.resource.data.createdAt is timestamp
          && request.resource.data.updatedAt is timestamp;
          
        allow update: if isOwner(userId)
          && request.resource.data.keys().hasAll(['url', 'title', 'description', 'domain', 'favorite', 'createdAt', 'updatedAt']);
      }
      
      // User's categories subcollection
      match /categories/{categoryId} {
        allow read, write: if isOwner(userId);
        
        // Validate category data on create/update
        allow create: if isOwner(userId)
          && request.resource.data.keys().hasAll(['name', 'createdAt'])
          && request.resource.data.name is string
          && request.resource.data.createdAt is timestamp;
          
        allow update: if isOwner(userId)
          && request.resource.data.keys().hasAll(['name', 'createdAt']);
      }
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
